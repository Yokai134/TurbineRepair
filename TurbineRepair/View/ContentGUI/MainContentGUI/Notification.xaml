<UserControl x:Class="TurbineRepair.View.ContentGUI.MainContentGUI.Notification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:TurbineRepair.ViewModel"
             xmlns:local="clr-namespace:TurbineRepair.View.ContentGUI.MainContentGUI"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="700">
    <UserControl.DataContext>
        <viewModel:NotificationVM/>
    </UserControl.DataContext>

    <Grid>
        <ListView ItemsSource="{Binding Notifications}"
                  Background="Transparent"
                  BorderThickness="0"
                  ItemContainerStyle="{StaticResource NotificationCard}"/>

    </Grid>
</UserControl>

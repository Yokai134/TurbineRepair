<UserControl x:Class="TurbineRepair.View.ContentGUI.MainContentGUI.Project"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TurbineRepair.View.ContentGUI.MainContentGUI"
             xmlns:viewModel="clr-namespace:TurbineRepair.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="700">
    <UserControl.DataContext>
        <viewModel:ProjectVM/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Style="{DynamicResource ComboBoxProject}" 
                  x:Name="cb_users"
                  Margin="10"
                  Padding="20,13,0,0"
                  FontSize="20"
                  ItemContainerStyle="{StaticResource }"
                  Foreground="Gray"/>
        <ListView ItemsSource="{Binding Projects}"
                  SelectedItem="{Binding SelectedProject}"
                  Background="Transparent"
                  Grid.Row="1"
                  BorderThickness="0"
                  ItemContainerStyle="{StaticResource ProjectCard}">
        </ListView>
    </Grid>
</UserControl>

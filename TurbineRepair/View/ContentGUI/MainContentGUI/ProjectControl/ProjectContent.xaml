<UserControl x:Class="TurbineRepair.View.ContentGUI.MainContentGUI.ProjectControl.ProjectContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TurbineRepair.View.ContentGUI.MainContentGUI.ProjectControl"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="700">
    <Grid Background="Transparent">
        <TabControl Background="Transparent"
                    BorderBrush="Transparent">
            <TabItem Style="{StaticResource TabItemStyle}" 
                     Header="Изображения">
                <ListView Margin="10"
                          Background="Transparent"
                          ItemContainerStyle="{StaticResource ImageCard}"/>
            </TabItem>
            <TabItem Style="{StaticResource TabItemStyle}" 
                     Header="Описание">
                
            </TabItem>
        </TabControl>
         
    </Grid>
</UserControl>

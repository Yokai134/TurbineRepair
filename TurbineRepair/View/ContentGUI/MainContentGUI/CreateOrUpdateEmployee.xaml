<UserControl x:Class="TurbineRepair.View.ContentGUI.MainContentGUI.CreateOrUpdateEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TurbineRepair.View.ContentGUI.MainContentGUI"
             xmlns:viewModel="clr-namespace:TurbineRepair.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:CreateOrUpdateEmployee/>
    </UserControl.DataContext>
    
    <Grid>
        <ScrollViewer Margin="10">
            <StackPanel>
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Image Width="100"
                           Height="100" 
                           Source="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"
                           Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="30" RadiusY="30" Rect="0,0,100,100"/>
                        </Image.Clip>
                    </Image>
                    <Grid Grid.Column="1">
                        <StackPanel>
                            <Label Content="Изображение (ссылка или выбор по кнопке)"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="Gray"/>
                            <TextBox Style="{StaticResource AutheticationTextBox}"
                                 FontSize="20"
                                 Height="40"
                                 Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="20,6,0,0"/>
                        </StackPanel>
                    </Grid>
                    <Button Grid.Column="2"
                            Margin="10,30"
                            Content="Выбрать"
                            Style="{StaticResource ButtonMain}"/>
                </Grid>
                <Label Content="Фамилия"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Gray"/>
                <TextBox Style="{StaticResource AutheticationTextBox}"
                         FontSize="20"
                         Height="40"
                         Text="111"
                         Padding="20,6,0,0"/>
                <Label Content="Имя"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Gray"/>
                <TextBox Style="{StaticResource AutheticationTextBox}"
                         FontSize="20"
                         Height="40"
                         Text="111"
                         Padding="20,6,0,0"/>
                <Label Content="Отчество"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Gray"/>
                <TextBox Style="{StaticResource AutheticationTextBox}"
                         FontSize="20"
                         Height="40"
                         Text="111"
                         Padding="20,6,0,0"/>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.75*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="10">
                            <Label Content="Роль"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="Gray"/>
                            <ListView Height="110"
                                      Margin="10,0"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      ItemContainerStyle="{StaticResource RoleCard}"
                                      ItemsSource="{Binding RoleList}"/>

                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Margin="10">
                            <Label Content="Должность"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="Gray"/>
                            <ListView Height="110"
                                      Margin="10,0"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      ItemContainerStyle="{StaticResource PostCard}"
                                      ItemsSource="{Binding PostsList}"/>
                        </StackPanel>

                    </Grid>
                </StackPanel>
                <Label Content="Телефон"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Gray"/>
                <TextBox Style="{StaticResource AutheticationTextBox}"
                         FontSize="20"
                         Height="40"
                         Text="111"
                         Padding="20,6,0,0"/>

                <Label Content="Логин"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Gray"/>
                <TextBox Style="{StaticResource AutheticationTextBox}"
                         FontSize="20"
                         Height="40"
                         Text="111"
                         Padding="20,6,0,0"/>

                <Label Content="Пароль"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Gray"/>
                <TextBox Style="{StaticResource AutheticationTextBox}"
                         FontSize="20"
                         Height="40"
                         Text="111"
                         Padding="20,6,0,0"/>
               
            </StackPanel>
        </ScrollViewer>  
    </Grid>
</UserControl>

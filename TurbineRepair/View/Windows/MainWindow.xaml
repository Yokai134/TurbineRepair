<Window x:Class="TurbineRepair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurbineRepair"
        xmlns:viewModel="clr-namespace:TurbineRepair.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None"
        FontFamily="Inter"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Clip>
        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="{Binding SizeWindows}"/>
    </Window.Clip>
    
    <Grid>
        <ContentControl Content="{Binding CurrentControl}"/>
    </Grid>
</Window>

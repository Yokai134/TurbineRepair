                    <RectangleGeometry RadiusX="30" RadiusY="30" Rect="0,0,100,100"/>
                </Image.Clip>
            </Image>
           
        </StackPanel>
        <StackPanel VerticalAlignment="Center">
            <Label Content="dsadasd"
                   Margin="10"
                   Foreground="Gray"
                   FontSize="20"
                   FontWeight="SemiBold"/>
            <Label Content="dsadasd"
                   Margin="10"
                   Foreground="Gray"
                   FontSize="20"
                   FontWeight="SemiBold"/>
            <Label Content="dsadasd"
                   Margin="10"
                   Foreground="Gray"
                   FontSize="20"
                   FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Center">
            <Label Content="dsadasd"
                   Margin="10"
                   Foreground="Gray"
                   FontSize="20"
                   FontWeight="SemiBold"/>
            <Label Content="dsadasd"
                   Margin="10"
                   Foreground="Gray"
                   FontSize="20"
                   FontWeight="SemiBold"/>
            <Label Content="dsadasd"
                   Margin="10"
                   Foreground="Gray"
                   FontSize="20"
                   FontWeight="SemiBold"/>
        </StackPanel>
    </StackPanel>
</UserControl>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cmd ="clr-namespace:TurbineRepair.ViewModel"
                    xmlns:converter="clr-namespace:TurbineRepair.ResourceApp">

    <converter:ConverterString x:Key="dataConverter"/>

    <Style TargetType="ListViewItem" x:Key="ProjectCard">

        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#292b2F"/>
            </Trigger>
        </Style.Triggers>

        <Setter Property="Background" Value="#36393F"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="#3e4147"
                            BorderThickness="1"
                            CornerRadius="25"
                            Margin="10,10">

                        <StackPanel Orientation="Vertical">
                            <StackPanel Margin="10">
                                <Label Content="{Binding ProjectName}"
                                       FontSize="20"
                                       Foreground="Gray"
                                       FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Исполнитель: "
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding ProjectExecutorNavigation.Surname}"
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding ProjectExecutorNavigation.Name}"
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding ProjectExecutorNavigation.Patronomyc}"
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Статус: "
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding ProjectStatusNavigation.StatusName}"
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Заказчик: "
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding ProjectCustomerNavigation.CustomerSurname}"
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding ProjectCustomerNavigation.CustomerName}"
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding ProjectCustomerNavigation.CustomerPatronomyc}"
                                           FontSize="20"
                                           Foreground="Gray"
                                           FontWeight="SemiBold"/>
                                </StackPanel>
                              
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="10,0,0,0">
                                <Label Content="Дата начала: "
                                       FontWeight="SemiBold"
                                       Foreground="Gray"
                                       FontSize="20"/>
                                <Label Content="{Binding ProjectDataStart, Converter={StaticResource dataConverter}}"
                                       FontSize="20"
                                       Foreground="Gray"
                                       FontWeight="SemiBold">
                                </Label>
                                <Label Content="Дата окончания: "
                                       FontWeight="SemiBold"
                                       Foreground="Gray"
                                       FontSize="20"
                                       Margin="50,0,0,0"/>
                                <Label Content="{Binding ProjectDataEnd, Converter={StaticResource dataConverter}}"
                                       FontSize="20"
                                       Foreground="Gray"
                                       FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right"
                                        Margin="0,0,10,10">
                                <Button Content="Open project"
                                        Style="{DynamicResource ButtonAuthetication}"
                                        FontWeight="SemiBold"
                                        FontSize="20"
                                        Height="40"
                                        Width="150">
                                    <Button.Command>
                                        <cmd:OpenProjectCommand/>
                                    </Button.Command>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>

    <Style TargetType="ListViewItem" x:Key="NotificationCard">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border BorderBrush="#3e4147"
                            BorderThickness="1"
                            CornerRadius="25"
                            Width="660"
                            Margin="10,10">

                        <StackPanel Orientation="Vertical">
                            <StackPanel Margin="10,0,0,0">
                                <Label Content="{Binding nameSender}"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding descriptionNotification}"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right"
                                        Margin="0,10,10,10">
                                <Button Content="Go"
                                        Style="{DynamicResource ButtonAuthetication}"
                                        FontWeight="SemiBold"
                                        FontSize="20"
                                        Height="30"
                                        Width="100"/>
                            </StackPanel>
                        </StackPanel>


                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListViewItem" x:Key="ContactCard">

        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#292b2F"/>
            </Trigger>
        </Style.Triggers>

        <Setter Property="Background" Value="#36393F"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="#3e4147"
                            BorderThickness="1"
                            CornerRadius="15"
                            Height="50"
                            Margin="8,2">

                        <StackPanel Orientation="Horizontal"
                                    Margin="10,0,0,0">

                            <Image Source="{Binding Image}"
                                   Height="30"
                                   Width="30"
                                   Stretch="UniformToFill">
                                <Image.Clip>
                                    <RectangleGeometry RadiusX="30" RadiusY="30" Rect="0,0,30,30"/>
                                </Image.Clip>
                            </Image>

                            <StackPanel Margin="0,5,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{Binding Surname}"
                                           FontSize="15"
                                           FontWeight="SemiBold"/>
                                    <Label Content="{Binding Name}"
                                           FontSize="15"
                                           Margin="-5,0,0,0"
                                           FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Text="{Binding PostNavigation.PostName}"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="10"
                                           Foreground="Gray"
                                           Margin="5,-5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListViewItem" x:Key="ChatCard">

        <Style.Resources>
            <ControlTemplate x:Key="SenderRow">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    Margin="0,0,10,0">
                            <Label Content="{Binding MessageSenderName}"
                                       Foreground="Gray"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,-5,0"/>

                            <Label Content="{Binding MessgeTime}"
                                       Foreground="Gray"
                                       FontSize="8"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border CornerRadius="15" 
                                Background="#292b2F" 
                                BorderThickness="1" 
                                Margin="0,0,10,0"
                                BorderBrush="#292b2F">
                            <TextBlock Text="{Binding MessageText}"
                                       Foreground="Gray"
                                       Margin="10"
                                       TextWrapping="Wrap"
                                       Width="250"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                        </Border>

                    </StackPanel>
                    <Image Source="{Binding MessageSenderImage}"
                               Width="50"
                               Height="50"
                               Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="50" RadiusY="50" Rect="0,0,50,50"/>
                        </Image.Clip>
                    </Image>

                  
                </StackPanel>
            </ControlTemplate>
            <ControlTemplate x:Key="ReceiptRow">
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Image Source="{Binding MessageReceiptImage}"
                               Width="50"
                               Height="50"
                               Stretch="UniformToFill">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="50" RadiusY="50" Rect="0,0,50,50"/>
                        </Image.Clip>
                    </Image>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="10,0,0,0">
                            <Label Content="{Binding MessageReceiptName}"
                                       Foreground="Gray"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,-5,0"/>

                            <Label Content="{Binding MessgeTime}"
                                       Foreground="Gray"
                                       FontSize="8"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                       <Border CornerRadius="15" 
                               Background="#292b2F" 
                               BorderThickness="1" 
                               Margin="10,0,0,0"
                               BorderBrush="#292b2F">
                            <TextBlock Text="{Binding MessageText}"
                                       Foreground="Gray"
                                       Margin="10"
                                       TextWrapping="Wrap"
                                       Width="250"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                        </Border>
                    </StackPanel>
                </StackPanel>
            </ControlTemplate>
        </Style.Resources>
            
            
            

        <Style.Triggers>
            <DataTrigger Binding="{Binding IsNative}" Value="false">
                <Setter Property="Template" Value="{StaticResource ReceiptRow}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsNative}" Value="true">
                <Setter Property="Template" Value="{StaticResource SenderRow}"/>
            </DataTrigger>
        </Style.Triggers>
           
            
            
    </Style>

    <Style TargetType="ListViewItem" x:Key="ImageCard">
        <Setter Property="Template">
            <Setter.Value>
